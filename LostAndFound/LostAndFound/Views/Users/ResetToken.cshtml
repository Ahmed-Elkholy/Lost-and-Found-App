@model LostAndFound.Models.RegisterModel

@{
    ViewBag.Title = "ResetToken";
}

<form action="ResetToken" method="post">
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="resetToken">Reset Token></label>
            < @Html.EditorFor(model => model.Token, new { htmlAttributes = new { @class = "form-control", @placeholder = "password" } })
            @Html.ValidationMessageFor(model => model.Token, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="password">New password</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Reset" class="btn btn-default" />
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</form>

